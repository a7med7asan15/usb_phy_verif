#!/usr/bin/env python3

import args
import os
import helper
import flow

## Generating Lists
helper.do_checks()
os.chdir(args.RunDir)

if args.sim_only:
    print(args.BPrim + "SIMULATION ONLY" + args.TEND)
else:
    helper.generate_lists()
    helper.copy_params()

## Compilation 
if args.sim_only: 
    print(args.BPrim + "SIMULATION ONLY" + args.TEND)
else:
    flow.compile()
    flow.optimize()

if args.comp_only == 0: 
    flow.simulate()

